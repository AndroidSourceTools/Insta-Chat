<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="social.chat.whatsapp.fb.messenger.messaging">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".NotificationReader"
            android:enabled="true"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <activity android:name=".TransparentChat"
            android:theme="@style/Theme.Transparent">
        </activity>

        <receiver android:name=".NotificationReceiver"
            android:enabled="true">

            <intent-filter>

                <action android:name="social.chat.whatsapp.fb.messenger.messaging.notificationreceiver"/>

            </intent-filter>

        </receiver>
    </application>

</manifest>